<?xml version="1.0" encoding="GBK"?>
<decorators defaultdir="/decorators">

	<excludes>
		<pattern>/common/*</pattern>
		<pattern>/images/*</pattern>
		<pattern>/styles/*</pattern>
		<pattern>/scripts/*</pattern>
		<pattern>/system/upload*</pattern>
		<pattern>/login.jsp</pattern>
		<pattern>/system/logout.action</pattern>
		<pattern>/system/logout.action?msg=wrong</pattern>
		<pattern>/logout</pattern>
		<pattern>/system/login.action</pattern>
    </excludes>

    <decorator name="system" page="system.jsp">
        <pattern>/system/*.*</pattern>
    </decorator>
    <decorator name="outlook" page="outlook.jsp">
        <pattern>/*</pattern>
    </decorator>
        
</decorators>
